<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Cooking time</th>
      <th>Difficulty level</th>
      <th>Food type</th>
      <th>Food preference</th>
      <th>Cuisine</th>
      <th>Servings</th>
      <th>Ingredients</th>
      <th>Prodecure</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.cooking_time %></td>
        <td><%= recipe.difficulty_level %></td>
        <td><%= recipe.food_type.name %></td>
        <td><%= recipe.food_preference.name %></td>
        <td><%= recipe.cuisine.name %></td>
        <td><%= recipe.servings %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.prodecure %></td>
        <td><%= link_to 'Show', recipe %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_recipe_path(recipe), class: "btn btn-success btn-small" %></td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-small" %></td>  
        <% end %>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

